<UserControl x:Class="Legends_Email_Spammer.NumberInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Legends_Email_Spammer"
             mc:Ignorable="d" Height="23" Width="111">
    <Grid>
        <TextBox x:Name="NumberBox" Text="{Binding DefaultNumber}" PreviewTextInput="NumberBox_PreviewTextInput" DataObject.Pasting="NumberBox_Pasting" Background="#FFEEEEEE" MaxLength="10" BorderBrush="Black" Foreground="#FF222222" Visibility="Visible" MaxLines="1" Height="23" VerticalAlignment="Top" RenderTransformOrigin="0.639,2.174" HorizontalAlignment="Left" ToolTip="Delay in milliseconds e.g 1000 milliseconds is 1 second" Width="111"/>
        <Label x:Name="SuffixLabel" Content="{Binding Suffix}" HorizontalAlignment="Left" Margin="84,-4,0,0" VerticalAlignment="Top" Height="23" Width="27"/>

    </Grid>
</UserControl>
